{% extends "layout/base.jinja" %} 

{% block content %} 
    <h1>更新商品項目</h1>
    
    <form method="POST" action="/posts/{{ post.id }}">
        <section>
            <div>
                <label>商品名稱: </label>
                <input type="text" name="title" placeholder="請輸入商品名稱" value="{{ post.title }}">
            </div>
                
            <div>
                <label>商品價錢: </label>
                <input type="text" name="price" placeholder="請輸入商品價錢" value="{{ post.price }}">
            </div>
                
            <div>
                <label>商品項目描述: </label>
                <textarea name="description" placeholder="商品描述">{{ post.description }}</textarea>
            </div>

            <div> 
                <button>更新商品內容</button>
            </div>
        </section>
    </form>
{% endblock %}  