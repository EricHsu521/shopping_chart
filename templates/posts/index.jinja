{% extends "layout/base.jinja" %} 

{% block content %} 
    <h1>所有商品列表</h1>
    <a href="/posts/new">新增商品</a>

    
    {% for post in posts %}
        <div>
            <h3><a href="/posts/{{ post.id }}"> {{ post.title }}</a> </h3>
            {{ post.price }} {{ post.description }}
        </div>
    {% endfor %}
{% endblock %}    
